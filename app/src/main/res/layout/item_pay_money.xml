<?xml version="1.0" encoding="utf-8"?>
<com.ming.base.widget.SelectMutilView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pay_money_height"
    android:background="@drawable/pay_money_border">

    <TextView
        android:id="@+id/pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@drawable/common_text_selector"
        android:textSize="@dimen/common_text_xxl" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/pay_disable"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:scaleType="fitXY"
        android:src="@drawable/one_card_limit_money" />
</com.ming.base.widget.SelectMutilView>