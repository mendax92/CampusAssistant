<?xml version="1.0" encoding="utf-8"?>
<com.zhiqi.campusassistant.common.ui.widget.MaterialSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                style="@style/MainHorizontalLine"
                android:layout_marginTop="@dimen/common_margin_xs" />

            <TextView
                style="@style/MainText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_item_height_s"
                android:background="@color/windowBackground_sub"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin_s"
                android:text="@string/entrance_step" />

            <View style="@style/MainHorizontalLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/step_1"
                    style="@style/MainItem"
                    android:layout_height="@dimen/common_item_height_m"
                    android:paddingRight="@dimen/common_margin_s">

                    <TextView
                        style="@style/MainText"
                        android:text="@string/entrance_step_1" />

                    <ImageView
                        style="@style/NextIcon"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <View
                    style="@style/MainHorizontalLine"
                    android:layout_marginLeft="@dimen/common_margin_s" />

                <RelativeLayout
                    android:id="@+id/step_2"
                    style="@style/MainItem"
                    android:layout_height="@dimen/common_item_height_m"
                    android:paddingRight="@dimen/common_margin_s">

                    <TextView
                        style="@style/MainText"
                        android:text="@string/entrance_step_2" />

                    <ImageView
                        style="@style/NextIcon"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <View
                    style="@style/MainHorizontalLine"
                    android:layout_marginLeft="@dimen/common_margin_s" />

                <RelativeLayout
                    android:id="@+id/step_3"
                    style="@style/MainItem"
                    android:layout_height="@dimen/common_item_height_m"
                    android:paddingRight="@dimen/common_margin_s">

                    <TextView
                        style="@style/MainText"
                        android:text="@string/entrance_step_3" />

                    <ImageView
                        style="@style/NextIcon"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </LinearLayout>

            <View style="@style/MainHorizontalLine" />

            <View
                style="@style/MainHorizontalLine"
                android:layout_marginTop="@dimen/common_margin_xs" />

            <TextView
                style="@style/MainText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_item_height_s"
                android:background="@color/windowBackground_sub"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin_s"
                android:text="@string/entrance_title" />

            <View style="@style/MainHorizontalLine" />


            <include layout="@layout/view_common_recycler" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.zhiqi.campusassistant.common.ui.widget.MaterialSwipeRefreshLayout>