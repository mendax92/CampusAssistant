<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_margin_s"
    android:paddingLeft="@dimen/common_margin_s"
    android:paddingRight="@dimen/common_margin_normal"
    android:paddingTop="@dimen/common_margin_s">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_gray_dark_color"
            android:textSize="@dimen/common_text_s" />

        <com.ming.base.widget.TextDrawableView
            android:id="@+id/pay_type"
            style="@style/MainText"
            android:drawablePadding="@dimen/common_margin_xs"
            android:textColor="@color/text_gray_dark_color"
            app:left_drawable_height="@dimen/pay_logo_size"
            app:left_drawable_width="@dimen/pay_logo_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_s"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_money"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/common_text_xs" />

        <TextView
            android:id="@+id/pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/common_text_xxl" />
    </LinearLayout>
</LinearLayout>