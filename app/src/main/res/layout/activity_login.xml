<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_close"
        android:layout_width="@dimen/login_close_btn_size"
        android:layout_height="@dimen/login_close_btn_size"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/common_margin_s"
        android:layout_marginTop="@dimen/common_margin_s"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/bt_app_close" />

    <TextView
        android:id="@+id/login_rule_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_margin_s"
        android:text="@string/login_rule_tip"
        android:textColor="@color/text_hint_color"
        android:textSize="@dimen/common_text_xs" />

    <com.ming.base.widget.ClearEditText
        android:id="@+id/login_account"
        style="@style/MainEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_input_height"
        android:layout_marginLeft="@dimen/common_margin_normal"
        android:layout_marginRight="@dimen/common_margin_normal"
        android:layout_marginTop="@dimen/common_margin_normal"
        android:background="@drawable/common_bg_input"
        android:gravity="center"
        android:hint="@string/login_account_hint"
        android:inputType="text"
        android:maxLines="1"
        android:paddingRight="@dimen/common_margin_xs" />

    <com.ming.base.widget.ClearEditText
        android:id="@+id/login_pwd_input"
        style="@style/MainEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_input_height"
        android:layout_marginLeft="@dimen/common_margin_normal"
        android:layout_marginRight="@dimen/common_margin_normal"
        android:layout_marginTop="@dimen/common_margin_normal"
        android:background="@drawable/common_bg_input"
        android:gravity="center"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingRight="@dimen/common_margin_xs" />

    <TextView
        android:id="@+id/login_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/common_margin_s"
        android:layout_marginTop="@dimen/common_margin_xxs"
        android:padding="@dimen/common_margin_xxs"
        android:text="@string/login_forget_pwd"
        android:textColor="@color/text_gray_xdark_color"
        android:textSize="@dimen/common_text_xs" />

    <Button
        android:id="@+id/login_btn"
        style="@style/MainButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_margin="@dimen/common_margin_normal"
        android:enabled="false"
        android:text="@string/login" />
</LinearLayout>