<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notice_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_margin_s"
    android:layout_marginRight="@dimen/common_margin_s"
    android:background="@drawable/common_content_selector"
    app:cardCornerRadius="@dimen/notice_item_radius"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_margin_xs"
        android:paddingLeft="@dimen/common_margin_s"
        android:paddingRight="@dimen/common_margin_s"
        android:paddingTop="@dimen/common_margin_xs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notice_title"
                style="@style/MainText"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/common_text_s" />
        </LinearLayout>

        <com.ming.base.widget.DashLineView
            style="@style/MainHorizontalDashLine"
            android:layout_marginBottom="@dimen/common_margin_xs"
            android:layout_marginTop="@dimen/common_margin_xs" />

        <TextView
            android:id="@+id/notice_summary"
            style="@style/MainText"
            android:ellipsize="end"
            android:maxLines="4" />

        <com.ming.base.widget.DashLineView
            style="@style/MainHorizontalDashLine"
            android:layout_marginBottom="@dimen/common_margin_xs"
            android:layout_marginTop="@dimen/common_margin_xs" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/common_show_details"
                android:textColor="@color/text_link_color"
                android:textSize="@dimen/common_text_n" />

            <ImageView style="@style/NextIcon" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>