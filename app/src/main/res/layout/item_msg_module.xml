<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/MainHorizontalLine" />

    <LinearLayout
        android:id="@+id/msg_module_top"
        style="@style/MainItem"
        android:layout_height="@dimen/common_item_height_m"
        android:background="@drawable/common_content_sub_selector">

        <ImageView
            android:id="@+id/msg_module_icon"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/msg_module_title"
            style="@style/MainText"
            android:layout_marginLeft="@dimen/common_margin_s"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/msg_module_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_xs"
            android:textColor="@color/text_gray_xdark_color"
            android:textSize="@dimen/common_text_s" />

        <TextView
            android:id="@+id/msg_module_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_xs"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/common_text_s" />

        <ImageView
            style="@style/NextIcon"
            android:layout_marginRight="@dimen/common_margin_s" />
    </LinearLayout>

    <View style="@style/MainHorizontalLine" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/msg_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />
</LinearLayout>