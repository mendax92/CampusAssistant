<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height"
    android:background="@drawable/common_content_selector"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/area_code"
        style="@style/MainText"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_margin_s"
        android:layout_marginStart="@dimen/common_margin_s" />

    <TextView
        android:id="@+id/area_state"
        style="@style/MainText"
        android:layout_gravity="center_vertical|right"
        android:layout_marginEnd="@dimen/common_margin_s"
        android:layout_marginRight="@dimen/common_margin_s" />
</FrameLayout>