<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_introduce_top_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/user_introduce_img_size"
                android:layout_height="@dimen/user_introduce_img_size"
                android:layout_marginLeft="@dimen/common_margin_l"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title"
                style="@style/MainText"
                android:layout_marginLeft="@dimen/common_margin_s" />
        </LinearLayout>

        <View style="@style/MainHorizontalLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_margin_xs"
            android:paddingLeft="@dimen/common_margin_s"
            android:paddingRight="@dimen/common_margin_s"
            android:paddingTop="@dimen/common_margin_xs">


            <TextView
                style="@style/MainText"
                android:layout_marginRight="@dimen/common_margin_s"
                android:text="@string/user_introduce_function" />

            <TextView
                android:id="@+id/introduce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_hint_color"
                android:textSize="@dimen/common_text_n" />
        </LinearLayout>

        <View style="@style/MainHorizontalLine" />
    </LinearLayout>
</ScrollView>