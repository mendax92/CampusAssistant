<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_picture_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/new_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_img_big_default" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_picture_title_height"
        android:layout_gravity="bottom"
        android:background="@color/black_40_percent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/common_margin_s"
        android:paddingRight="@dimen/common_margin_s"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_n" />
</FrameLayout>