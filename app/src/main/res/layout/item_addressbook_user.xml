<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contacts_item_height"
    android:background="@drawable/common_content_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_header"
        style="@style/Image.Circle"
        android:layout_width="@dimen/user_header_size"
        android:layout_height="@dimen/user_header_size"
        android:layout_marginLeft="@dimen/common_margin_s"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_default_head" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_s"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            style="@style/MainText"
            android:maxLines="1" />

        <TextView
            android:id="@+id/user_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/common_text_xs" />
    </LinearLayout>
</LinearLayout>