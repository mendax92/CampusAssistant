<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/common_line_color" />
            <corners android:radius="@dimen/common_radius_xs" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="@dimen/common_line_size"
        android:left="@dimen/common_line_size"
        android:right="@dimen/common_line_size"
        android:top="@dimen/common_line_size">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/common_radius_xs" />
        </shape>
    </item>
</layer-list>