<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <stroke android:width="@dimen/common_line_size" android:color="@color/text_main_color" />
            <corners android:radius="@dimen/pay_money_radius" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/common_line_size" android:color="@color/text_hint_color" />
            <corners android:radius="@dimen/pay_money_radius" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

</selector>