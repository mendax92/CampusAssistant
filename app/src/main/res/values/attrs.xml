<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CodeView">
        <attr name="length" format="integer" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="dividerPadding" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="gridDrawable" format="reference" />
        <attr name="code" format="string" />
        <attr name="codeColor" format="color" />
        <attr name="pointRadius" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="showType" format="enum">
            <enum name="word" value="1" />
            <enum name="password" value="2" />
        </attr>
    </declare-styleable>



    <declare-styleable name="NumberKeyboardView">
        <!-- 删除按键的图标 -->
        <attr name="deleteDrawable" format="reference" />
        <!-- 删除按键图标的宽度 -->
        <attr name="deleteWidth" format="dimension|reference" />
        <!-- 删除按键图标的高度 -->
        <attr name="deleteHeight" format="dimension|reference" />
        <!-- 删除按键图标的颜色 -->
        <attr name="deleteBackground" format="color|reference" />
    </declare-styleable>
</resources>